<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepTwoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Existing UI elements -->

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作品标题 *" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作品说明 *"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄地点 *"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄日期 *"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄相机 *"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_lens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄镜头 *"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_lens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_aperture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="光圈 *"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_aperture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_shutter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快门 *"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_shutter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_iso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISO *"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_iso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其它"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btn_save_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存地名"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btn_save_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存设置"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
