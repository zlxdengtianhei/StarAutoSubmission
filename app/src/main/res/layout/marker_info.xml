<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_marker_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FEFEFE"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@id/button_delete_marker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_delete_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_marker"
        app:layout_constraintEnd_toEndOf="@id/text_marker_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_marker_info" />

</androidx.constraintlayout.widget.ConstraintLayout>